<% if flash[:message] %>
<div class="alert alert-success">
 <%= flash[:message] %>.
</div>
<% end %>

<div class="page-header">
  <h1>All Pages
  </h1>
  <br>
<a class="btn btn-info btn-small" href="<%= new_admin_page_url %>">New Page</a>

</div>

<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Slug</th>
      <th>Title</th>
      <th>
        Actions
      </th>
    </tr>
  </thead>
  <tbody>
  <% @pages.each do |page| %>
    <tr>
      <td>
        <%= link_to page.slug, page_url(page.slug) %>
      </td>
      <td>
        <%= page.title %>
      </td>
      <td>
        <a class="btn btn-warning btn-small" href="<%= edit_admin_page_url(page) %>">Edit</a>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>



