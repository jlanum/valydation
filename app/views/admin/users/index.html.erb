<h2>Users</h2>

<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>City</th>
      <th>Joined</th>
      <th>Posted</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.first_name %> <%= user.last_name %></td>
      <td><%= user.email %></td>
      <td><%= user.city.name %></td>
      <td><%= user.created_at.strftime("%d %b %Y") %>
      <td><%= user.sales.size %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @users %>

