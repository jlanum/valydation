<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <% if @title %>
      <title> /valydation - <%= @title %></title>
    <% else %>
      <title>/valydation</title>
    <% end %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content=""> 
   <meta name="p:domain_verify" content="90269a038dd4c1af51dbb09519eaddfc"/>
   <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <%= javascript_include_tag 'application' %>

    <%= stylesheet_link_tag 'application' %>

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- Fav and touch icons -->
    <link rel="shortcut icon" href="/assets/MST_Favicon.png" type="image/png">
    <link rel="icon" href="/assets/MST_Favicon.png" type="image/png">

  <%= csrf_meta_tag %>
    
  </head>

  <body>
    <!-- NAVBAR-->
  <!--===============================================================-->
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" data-scroll href="/"><img alt="Valydation_logo" src="/assets/valydation_logo.png"></a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <% unless @no_header_links %>
              <li><form class="form-search" action="/search_results">
              <input type="text" name="q" value="<%= params[:q] %>" data-provide="typeahead" class="input-medium search-query" placeholder="Search by Company">
            </form>
          </li>
              <li><a href="http://valydation.tumblr.com/" target="blank" >Blog</a></li>
              <li><%= link_to "About Us", "/page/about" %></li>
              
              <% end %></li>
          </ul>
        </div>
      </div>
    </div>
    
    
    <%= yield %>

    <!-- FOOTER-->
    <!--===============================================================-->
    <div class="bg-footer">
      <div class="container">
        <div class="row text-center">
          <div class="col-sm-12">
            <a href="http://www.facebook.com/valydation"><img src="/assets/facebook_icon_32.png"></a>
            <a href="http://www.twitter.com/valydation"><img src="/assets/twitter_32_icon.png"></a>
            <a href="http://www.instagram.com/valydation"><img src="/assets/instagram_32.png"></a>
          </div>
        </div>
      </div>
    </div>

    <!-- FOOTER-BOTTOM-->
    <!--===============================================================-->
    <div class="bg-footer-bottom">
      <div class="container">
        <div class="row">
          <div class="col-sm-6">
            <p class="copyright">2013 &copy; /valydation - All Rights Reserved</p>
          </div>
          <div class="col-sm-6">
            <ul class="list-inline pull-right">
              <li class="border-right"><a href="/page/about">About Us</a></li>
              <li class="border-right"><a href="/page/privacy">Privacy</a></li>
              <li class="border-right"><a href="/page/tos">Terms of Service</a></li>
             
            </ul>
          </div>
        </div>
      </div>
    </div>


    <link href="/page/custom-css.css" media="screen" rel="stylesheet" type="text/css" />

  </body>
</html>


