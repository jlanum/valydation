<style>
body {
  padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
}
</style>
<div class="container">
  <div class="span2"></div>
  <div class="span8">
<div class="marketing contact">
  <p><font size="8">Contact</font></p>
  <h4>Send us a message</h4>
  <%= form_tag(contact_url, :method => "post") do |f| %>
  <fieldset>

    <label>Your Name *</label>
    <input name="name" type="text" placeholder="Type here…">
  </fieldset>
  <fieldset>

    <label>Email *</label>
    <input name="email" type="text" placeholder="Type something…">
  </fieldset>
  <fieldset>

    <label>Subject *</label>
    <input name="subject" type="text" placeholder="Type something…">
  </fieldset>
  <label>Message *</label>
  <textarea name="message" rows="10" class="span9"></textarea><br>
  <button type="submit" class="btn btn-large btn-success">Submit</button>
<% end %>
</div>
</div>
</div>
<br><br><br>

