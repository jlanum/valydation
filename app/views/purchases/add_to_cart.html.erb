<style>
body {
  padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
}
</style>


<div class="container">
  <div class="marketing">

<h1>Your Cart</h1>

<ul>
<% for item in @cart.items %>
	<li><%= h(item.brand) %></li>
	<li><%= h(item.orig_price) %></li>
	
	
<% end %>
</ul>

<a href="/sales" class="btn btn-success">Return to Shopping</a><br><br>
<%= button_to "Clear Cart", {:action => "clear_cart"}, :class => "btn btn-success" %>
<br><br><br><br>
</div>
</div>
