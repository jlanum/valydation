<style>
  body {
    padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
  }
</style>


<div class="container">
  <div class="marketing-template">

    <%= raw @page.content %>

    <hr class="featurette-divider">

    <div class="featurette-pics">

      <div class="hot-spot">
        <ul class="thumbnails">

          <% @groups.each do |group| %>
            <% next unless sale = group.featured_sale %>
          <li class="span3">
        
          <p class="hayes-phrase">From <%= group.name %></p>

            <%= link_to(image_tag(sale.image_0.versions[:web_index],
                        :class => "product-pic img-polaroid"),
                        group_slug_url(:slug => group.slug)) if sale.image_0 %>

          </li>

          <% end %>

        </ul>
      </div>

  </div>
</div>

<div class="container">
  <hr class="featurette-divider">
</div><!-- /.container -->

