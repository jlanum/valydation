<li class="span3">
<div class="hover-group">
  <div class="image-wrapper">
    <span class="thisInfo">
      <p class="lanvin"><%= sale.brand %></p>      
    </span>
    <a href="<%= sale_url(sale.id) if sale.id %>" onclick="if (isMobile()) { return true; } else { $('#sale_modal_<%= sale.id %>').modal({}); return false; }">
      <img class="product-pic" src="<%= sale.image_0.versions[:web_index] %>" alt="">
    </a>
    <% if sale.sold_out %>    
    <span class="sold-tag sold">
      <center>Sold</center>
    </span>
    <% end %>
    <span class="thisInfo">
    </span>
    <div class="hover-toggle">
      <center><span class="percentoff"><%= (sale.percent_off.to_f * 100).round %>% Off</span></center>
    </div>
  </div>
</div>
</li>
