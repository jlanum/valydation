<!-- Modal -->
<div id="sale_modal_<%= sale.id %>" class="modal hide" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close modal-brand" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <br>
    <p id="myModalLabel"></p>
  </div>

  <div class="modal-body">
    <%= render :partial => "sales/sale_detail", :locals => {:sale => sale} %>
  </div>

  <div class="modal-footer">
    <span class="row-fluid">
      <% if sale.user and sale.user.is_merchant %>
        <% if sale.sold_out %>
          <a href="#" onclick="return false;" class="btn btn-success span4 pull-right disabled">Sold Out</a>
        <% else %>
          <a href="<%= new_sale_purchase_url(:sale_id => sale.id) %>" class="btn btn-success span4 pull-right">Buy</a>
        <% end %>
    <% else %>
        <a href="#" onclick="return false;" class="btn btn-success span4 pull-right disabled">Buy</a>
    <% end %>
    </span>
  </div>
</div>

