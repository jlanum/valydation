    <style>
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }
    </style>

    <div class="container">
      <div class="category-feed well">
        <span class="pull-left">
          <script>
  function submitCityForm() {
    $('#city_form')[0].submit()
  }
          </script>
          <%= form_for @user, :html => {:id => "city_form"} do |f| %>
          <select id="city_id" name="city_id" onchange="submitCityForm()">
        <%= options_for_select(@cities.collect { |c| [c.name, c.id] }, @user.city_id) %>
          </select>
          <% end %>

        </span>

        <span class="category-feed-align">

          <% Sale.categories.each_with_index do |category, category_id| %>
            <% if category_id == params[:category_id].to_i %><strong><% end %>
              <%= link_to category.upcase, sales_url(:category_id => category_id) %>&#160;
              <% unless category_id == Sale.categories.size-1 %>|&#160;<% end %>
            <% if category_id == params[:category_id].to_i %></strong><% end %>
          <% end %>

        </span>

      </div>
    </div>

    <% 
        @sale_rows = [[]]
        @sales.each_with_index do |sale, i|
          if i>0 && i%4 == 0
            @sale_rows << []
          end
          @sale_rows.last << sale
        end
    %>

    <% @sale_rows.each do |row| %>
      <div class="row-fluid">
		    <div class="container">
          <ul class="thumbnails">

      <% row.each do |sale| %>

        <li class="span3">
          <div class="hover-group">
            <div class="image-wrapper">
              <a href="#sale_modal_<%= sale.id %>" data-toggle="modal">
                <img class="product-pic" src="<%= sale.image_0.versions[:web_index] %>" alt="">
              </a>
              <span class="thisInfo">
                <p class="lanvin"><%= sale.brand %></p>
                <p class="flats">Size <%= sale.size %><p>
                <p><i><%= sale.metro.name %></i></p>
              </span>
				    <div class="hover-toggle">
              <center><span class="percentoff"><%= (sale.percent_off * 100).round %>% Off</span></center>
				    </div>
          </div>
        </div>
       </li>

      <% end %>

          </ul>
        </div>
      </div>
    <% end %>


    <% @sales.each do |sale| %>

		<!-- Modal -->
    <div id="sale_modal_<%= sale.id %>" class="modal hide" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		  <div class="modal-header">
		    <button type="button" class="close modal-brand" data-dismiss="modal" aria-hidden="true">Ã—</button><center><a href="/sales"><img src="/assets/Logo_Icon_Small.png" class="modal-brand" height="34" width="180" /></a></center><br>
		    <p id="myModalLabel"></p>
		  </div>
		  <div class="modal-body">
		   	<div class="row-fluid">
          <div class="span2 modal-thumbnails">
            <% [:image_0, :image_1, :image_2].each do |image_sym|
              if (img = sale.send(image_sym)) and not img.versions[:web_thumbnail].to_s.empty?  %>
            <img class="img-polaroid" src="<%= img.versions[:web_thumbnail] %>" height="100px" width="100px" onmouseover="$('#sale_image_<%= sale.id %>')[0].src='<%= img.versions[:web_modal] %>'" onclick="$('#sale_image_<%= sale.id %>')[0].src='<%= img.versions[:web_modal] %>'" />
            <%   end
               end %>
            <br>
					</div>
          <div class="span6">	
            <span class="time-banner">
              <span class="image-banner">
                <img id="sale_image_<%= sale.id %>" src="<%= sale.image_0.versions[:web_modal] if sale.image_0 %>" alt="" />
                <span class="banner-toggle">
                  <span class="percentoff">
                    <center>
                      <i class="icon-time icon-white"> </i>
                      <font size="2">&#160;
                        <%= time_ago_in_words(sale.created_at) %>
                      </font>
                    </center>
                  </span>
              </span>
            </span>
            <br>
            <table class="table table-bordered">  
              <td><%= (sale.percent_off * 100).round %>% Off</td>
              <td>
                <font size="1">
                <%= humanized_money_with_symbol sale.orig_price %>
                </font>
              </td>

            <td><strike><font size="1"> 
              <%= humanized_money_with_symbol sale.sale_price %>
            </font> </strike></td>
							
            </table>
            <span class="modal-social">
              <i class="icon-heart"> </i>&#160;&#160;
              <i class="icon-comment"></i>&#160;&#160;
              <img src="/assets/f_logo.png" height="16px" width="16px">&#160;&#160;
              <img src="/assets/T_logo.png" height="16px" width="16px">
            </span>
          </div>
				
          <div class="span4 pull-right">
            <a href="<%= user_url(sale.user.id) %>">
              <img class="img-polaroid" src="<%= sale.user.photo.versions[:feed_2x] %>" height="60" width="60px">
            </a>
            <br>
            <a href="<%= user_url(sale.user.id) %>"><b><%= sale.user.display_name %></b></a>
            <br>
            <p class="muted time"><%= sale.user.city.name %></p>
					  <span class="btn pull-right span12">Follow</span><br><br><br>
					  <table class="table table-bordered table-striped">
						  <tr>  
                <td><font size="1" class="muted">
                    Store
                </font> &#160;
                <%= sale.store_name %>
                </td>
					    </tr>
					    <tr> 
                <td><font size="1" class="muted">Brand</font> &#160;<%= sale.brand %></td>
						  </tr>
						  <tr>  
                <td><font size="1" class="muted">Product</font> &#160;<%= sale.product %></td></tr><tr>  
                <td><font size="1" class="muted">Size</font> &#160; <%= sale.size %></td></tr>
					  </table>
				  </div>
				</div>
			</div>

      <div class="modal-footer">
        <span class="row-fluid">
		    <a href="purchase.html" class="btn btn-success span4 pull-right">Buy</a>
      </span>
		  </div>
		</div>

  <% end %>
    

    <center>
      <%= paginate @sales %> 
    </center>
        

