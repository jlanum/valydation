    <style type="text/css">
      body {
        padding-top: 140px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
        
      }

      .form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #f5f5f5;
        border: 1px solid #592A84;
        -webkit-border-radius: 5px;
           -moz-border-radius: 5px;
                border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
      }
      .form-signin .form-signin-heading,
      .form-signin .checkbox {
        margin-bottom: 10px;
      }
      .form-signin input[type="text"],
      .form-signin input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
		width: 200px;
      }

    </style>


    
    <div class="container ">
      <ul class="nav">
          <%= form_tag({:controller => "sessions", :action => "create"},
                       {:class => "form-signin"}) do %>
        
        <center><p><font size="5">Log In</font></p></center>
		<hr>
        <center><input type="text" class="input-block-level" placeholder="Email"><br>
        <input type="password" class="input-block-level" placeholder="Password"><br>
        
        <button class="btn btn-large" type="submit">Login</button><br><br>
	  <% end %>

		 </ul>
       
    </div> <!-- /container -->
