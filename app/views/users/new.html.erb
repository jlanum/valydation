<style type="text/css">
      body {
        padding-top: 90px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
        
      }

      .form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #f5f5f5;
        border: 1px solid #592A84;
        -webkit-border-radius: 5px;
           -moz-border-radius: 5px;
                border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
      }
      .form-signin .form-signin-heading,
      .form-signin .checkbox {
        margin-bottom: 10px;
      }
      .form-signin input[type="text"],
      .form-signin input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
		width: 200px;
      }

    </style>

    <script>


function validateAndSubmit() {

      if ($("#username")[0].value.length < 2) {
        alert("Please provide a username.");
        return false;
      }

      if (!$("#email")[0].value.match(".@.")) {
        alert("Please provide a valid email address.");
        return false;
      }

      if ($("#passwd_clear").val().length < 4) {
        alert("Your password must be at least 4 characters");
        return false;
      }

      if ($("#passwd_clear").val() != $("#passwd_confirm").val()) {
        alert("Your passwords don't match.");
        return false;
      }

      if ($("#first_name").val().length < 1) {
        alert("Please provide your first name.");
        return false;
      }

      if ($("#last_name").val().length < 1) {
        alert("Please provide your last name.");
        return false;
      }

      if ($("#zip_code").val().length != 5) {
        alert("Please provide your 5-digit zip code.");
        return false;
      }
    }

    </script>

    <div class="container ">
      <ul class="nav">
    <%= form_tag({:controller => "users", :action => "create"},
                 {:class => "form-signin"}) do %>


        <center><p><font size="5">Join</font></p></center>
		<hr>
    <% if @error_message %>
    <div class="alert alert-error">  
      <%= @error_message %>
    </div>
    <% end %>

      <center>

      <input type="text" value="<%= params[:username] %>" id="username" name="username" class="input-block-level" placeholder="Username"><br>
        
      <input type="text" value="<%= params[:email] %>" id="email" name="email" class="input-block-level" placeholder="Email"><br>
        <input type="password" value="<%= params[:passwd_clear] %>" id="passwd_clear" name="passwd_clear" class="input-block-level" placeholder="Password"><br>
        <input type="password" value="<%= params[:passwd_confirm] %>" id="passwd_confirm" name="passwd_confirm" class="input-block-level" placeholder="Confirm Password"><br>
        <input type="text" value="<%= params[:first_name] %>" id="first_name" name="first_name" class="input-block-level" placeholder="First Name"><br>
        <input type="text" value="<%= params[:last_name] %>" id="last_name" name="last_name" class="input-block-level" placeholder="Last Name"><br>
        <input type="text" value="<%= params[:zip_code] %>" id="zip_code" name="zip_code" class="input-block-level" placeholder="Zip Code"><br>
        

        <a href="#" onclick="return validateAndSubmit()">
          <button class="btn btn-large btn-success" type="submit">Join</button>
        </a>
        
        <br><br>
	  <% end %>

		 </ul>
       
    </div> <!-- /container -->

