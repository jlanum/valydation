<style type="text/css">
      body {
        padding-top: 90px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
        
      }

      .form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #f5f5f5;
        border: 1px solid #592A84;
        -webkit-border-radius: 5px;
           -moz-border-radius: 5px;
                border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
      }
      .form-signin .form-signin-heading,
      .form-signin .checkbox {
        margin-bottom: 10px;
      }
      .form-signin input[type="text"],
      .form-signin input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
		width: 200px;
      }

    </style>

    <div class="container ">
      <ul class="nav">
    <%= form_tag(register_lead_url,
                 {:class => "form-signin"}) do %>


        <center><p><font size="5">Sign Up</font></p></center>
		<hr>
    <% if @error_message %>
    <div class="alert alert-error">  
      <%= @error_message %>
    </div>
    <% end %>

      <center>

        <input type="text" value="<%= params[:first_name] %>" id="first_name" name="first_name" class="input-block-level" placeholder="First Name"><br>
        <input type="text" value="<%= params[:last_name] %>" id="last_name" name="last_name" class="input-block-level" placeholder="Last Name"><br>
        <input type="text" value="<%= params[:email] %>" id="email" name="email" class="input-block-level" placeholder="Email"><br>
        <input type="text" value="<%= params[:promo_code] %>" id="promo_code" name="promo_code" class="input-block-level" placeholder="Promo Code (optional)"><br>
        
        

        <button class="btn btn-large" type="submit">Join</button>
        
        <br><br>
	  <% end %>

		 </ul>
       
    </div> <!-- /container -->
