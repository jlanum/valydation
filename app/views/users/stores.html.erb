<style>
body {
  padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
}
</style>

<div class="container">
  <div class="category-feed well">
    <center>
      <font size="6" color="#666">Stores</font>
    </center>
  </div>
</div>


<% @stores.each_slice(4) do |row| %>

<div class="row-fluid">
  <div class="container">
    <ul class="thumbnails">

    <% row.each do |store| %>

    <li class="span3">
      <div class="hover-group">
        <div class="image-wrapper">
          <span class="thisInfo">
            <p class="city-state"><%= store.business_name %></p>
          </span>
          <a href="<%= user_custom_slug_url(store) %>">
            <img width="240" height="240" class="product-pic" src="<%= store.photo_version_url(:profile_2x) %>" alt="">
          </a>
        </span>
        <span class="thisInfo">
        </span>
        <div class="hover-boggle">
          <center><span class="store-name"><%= store.city.name %></span></center>
        </div>
      </div>
    </li>

    <% end %>

    </ul>
  </div>
</div>

<% end %>

