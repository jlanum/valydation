<style>
body {
  padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
}
</style>

<div class="container">
  <div class="category-feed well">
    <center>
      <font size="6" color="#666">Stores</font>
    </center>
  </div>
</div>


<div class="row-fluid">
  <div class="container">
    <ul class="thumbnails">

      <% @stores.each do |store| %>

        <li class="span3">
      <div class="hover-group">
        <div class="image-wrapper">
          <span class="thisInfo">
            <p class="city-state"><%= store.business_name %></p>
          </span>
          <a href="<%= user_custom_slug_url(store) %>">
            <img width="240" height="240" class="product-pic" src="<%= store.photo_version_url(:profile_2x) %>" alt="">
          </a>
        </span>
        <span class="thisInfo">
        </span>
        <div class="hover-boggle">
          <center><span class="store-name"><%= store.city.name %></span></center>
        </div>
      </div>
      </li>

    <% end %>

    </ul>
  </div>

<% (0..3).each do |row| %>

  <div class="row-fluid">
    <div class="container">
      <ul class="thumbnails">

    <% (0..3).each do |col| %>
      <% next unless store = @stores[col] %>
      <% if sale = @sales[store.id][row] %>
        <%= render :partial => "sales/sale_li", :locals => {:sale => sale} %>
      <% else %>
        <li class="span3"></li>
      <% end %>
    <% end %>

        </ul>
      </div>
  </div>


<% end %>


<% @sales.values.flatten.each do |sale| %>
  <%= render :partial => "sales/sale_modal", :locals => {:sale => sale} %>
<% end %>

